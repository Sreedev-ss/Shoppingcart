<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 ">
                <h2 class="text-center ">Add products</h2>
                <form action="/admin/add-products" enctype="multipart/form-data" method="post">
                    <label for="">Name</label>
                    <input type="text" name="name" class="form-control" required>

                     <label for="">Category</label>
                    <input type="text" name="category" class="form-control" required>

                     <label for="">Price</label>
                    <input type="number" name="price" class="form-control" required>

                     <label for="">Description</label>
                    <input type="text" name="description" class="form-control" required><br>

                     <img id="imgView" class="img-fluid mb-4" src="/product-images/{{products._id}}.jpg" alt="" style="width: 100px; height: 100px; object-fit: contain; border-radius: 4px; border: solid 1px rgba(0, 0, 0, 0.458);">
                     <label for="">Image</label>
                    <input type="file" name="Image" class="form-control" onchange="viewImage(event)" required><br>
                    <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure want to add this product ?')">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>